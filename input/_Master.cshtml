        <link rel="apple-touch-icon" sizes="114x114" href="@Context.GetLink("/assets/img/apple-icon-114x114.png")">
        <link rel="apple-touch-icon" sizes="120x120" href="@Context.GetLink("/assets/img/apple-icon-120x120.png")">
        <link rel="apple-touch-icon" sizes="144x144" href="@Context.GetLink("/assets/img/apple-icon-144x144.png")">
        <link rel="apple-touch-icon" sizes="152x152" href="@Context.GetLink("/assets/img/apple-icon-152x152.png")">
